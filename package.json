{
  "name": "@oliverlorenz/lib-ffmpeg",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "del-cli ./dist",
    "lint:eslint": "eslint ./src --ext .ts",
    "lint:prettier": "prettier \"src/**/*.ts\" --cache --check",
    "lint:types": "tsc --noEmit --skipLibCheck && tsc-strict",
    "test": "npm run build && jest --coverage",
    "test:watch": "jest --coverage --coverage-reporters html --watch-all",
    "postinstall": "npx husky init",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oliverlorenz/lib-ffmpeg.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oliverlorenz/lib-ffmpeg/issues"
  },
  "homepage": "https://github.com/oliverlorenz/lib-ffmpeg#readme",
  "description": "Utility functions for working with ffmpeg",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.30.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.2",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3",
    "typescript-strict-plugin": "^2.4.4"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "fluent-ffmpeg": "^2.1.3",
    "uuid": "^11.1.0"
  }
